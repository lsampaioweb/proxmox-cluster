auto lo
iface lo inet loopback

iface enp1board0 inet manual

iface enp2lacp0 inet manual

iface enp2lacp1 inet manual

iface enp2lacp2 inet manual

iface enp2lacp3 inet manual

iface enp3sync0 inet manual

iface enp3sync1 inet manual

iface bond0 inet manual
        bond-slaves {{ bond0_nic }}
        bond-miimon 100
        bond-mode 802.3ad
        bond-xmit-hash-policy layer2+3
        bond-min-links 1
#PVE Bond Interface.

auto vmbr0
iface vmbr0 inet manual
        bridge-ports {{ wan_management_nic }}
        bridge-stp off
        bridge-fd 0
        bridge-vlan-aware yes
        bridge-vids 2-4094
#VMs Interface - VLAN[2-4094].

auto vmbr0.{{ wan_management_vlan }}
iface vmbr0.{{ wan_management_vlan }} inet dhcp
#Management Interface.

auto vmbr1
iface vmbr1 inet static
        address {{ cluster_ip_and_netmask }}
        bridge-ports {{ cluster_nic }}
        bridge-stp off
        bridge-fd 0
#Cluster Interface.

auto vmbr2
iface vmbr2 inet manual
        bridge-ports {{ wan_management_nic }}.20
        bridge-stp off
        bridge-fd 0
        bridge-vlan-aware yes
        bridge-vids 2-4094
