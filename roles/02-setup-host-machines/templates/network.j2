auto lo
iface lo inet loopback

auto eth0
iface eth0 inet manual {{ ethtool_command_eth0 | indent(width=8) }}

auto eth1
iface eth1 inet manual {{ ethtool_command_eth1 | indent(width=8) }}

auto eth2
iface eth2 inet manual

auto eth3
iface eth3 inet manual

auto eth4
iface eth4 inet manual

auto bond0
iface bond0 inet manual
        bond-slaves {{ bond0_nic }}
        bond-miimon 100
        bond-mode 802.3ad
        bond-xmit-hash-policy layer2+3
        bond-min-links 1
#Bond NIC.

auto vmbr0
iface vmbr0 inet static
        bridge-ports {{ management_nic }}
        bridge-stp off
        bridge-fd 0
        bridge-vlan-aware yes
        bridge-vids 2-4094

auto vmbr0.3
iface vmbr0.3 inet static
        address {{ management_ip_and_netmask }}
        gateway {{ management_gateway }}
#Management NIC.

auto vmbr0.4
iface vmbr0.4 inet static
        address {{ cluster_ip_and_netmask }}
#Cluster NIC.

auto vmbr1
iface vmbr1 inet static
        bridge-ports bond0
        bridge-stp off
        bridge-fd 0
        bridge-vlan-aware yes
        bridge-vids 2-4094
#Vms NIC.
