auto lo
iface lo inet loopback

auto eth0
iface eth0 inet manual {{ ethtool_command_eth0 | indent(width=8) }}

auto eth1
iface eth1 inet manual {{ ethtool_command_eth1 | indent(width=8) }}

auto eth2
iface eth2 inet manual

auto eth3
iface eth3 inet manual

auto eth4
iface eth4 inet manual

auto bond0
iface bond0 inet manual
        bond-slaves {{ bond0_nic }}
        bond-miimon 100
        bond-mode 802.3ad
        bond-xmit-hash-policy layer2+3
        bond-min-links 1
#Bond Interface.

auto vmbr0
iface vmbr0 inet static
        address {{ wan_management_ip_and_netmask }}
        gateway {{ wan_management_gateway }}
        bridge-ports {{ wan_management_nic }}
        bridge-stp off
        bridge-fd 0
        bridge-vlan-aware yes
        bridge-vids 2-4094
#Wan Management Interface.

auto vmbr1
iface vmbr1 inet manual
        bridge-ports bond0
        bridge-stp off
        bridge-fd 0
        bridge-vlan-aware yes
        bridge-vids 2-4094
#Vms Interface.

auto vmbr1.3
iface vmbr1.3 inet static
        address {{ lan_management_ip_and_netmask }}
#Lan Management Interface.

auto vmbr2
iface vmbr2 inet manual
        bridge-ports {{ cluster_management_nic }}
        bridge-stp off
        bridge-fd 0
